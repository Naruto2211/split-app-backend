  "item": [
    {
      "name": "Expense Management",
      "item": [
        {
          "name": "Add Expense - Valid",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"amount\": 600,\n    \"description\": \"Dinner\",\n    \"paid_by\": \"Shantanu\",\n    \"participants\": [\"Shantanu\", \"Sanket\", \"Om\"]\n}"
            },
            "url": { "raw": "http://localhost:5000/expenses", "host": ["localhost"], "port": "5000", "path": ["expenses"] }
          }
        },
        {
          "name": "Get All Expenses",
          "request": {
            "method": "GET",
            "url": { "raw": "http://localhost:5000/expenses", "host": ["localhost"], "port": "5000", "path": ["expenses"] }
          }
        },
        {
          "name": "Update Expense - Change Petrol to â‚¹350",
